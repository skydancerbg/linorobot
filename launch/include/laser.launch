<launch>
    <!-- Run Linorobot compatible laser drivers. Takes reference from env var LINOLIDAR. ie. export LINOLIDAR=xv11 -->
    <include file="$(find linorobot)/launch/include/lidar/$(env LINOLIDAR).launch" />

    <!-- Publish static transform of the laser. Define your sensor offset here -->
    <!--<node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_laser" args="0.065 0 0.098 0 0 0  /base_link /laser"/>-->

    <!--Robco19: Publish static transform of the laser using RPLidar's proper mount params (on Robco19)-->
    <node pkg="tf2_ros" type="static_transform_publisher" name="base_link_to_laser" args="0.1876 0 0.178 0 3.14159 3.14159   /base_link /laser"/>
</launch>


